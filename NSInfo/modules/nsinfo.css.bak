/**
 * CSS for Special:nsinfo
 */
table.mw-nsinfotable {
	width: 100%;
}

table.mw-nsinfotable.intro th {
	padding-right: 1.4ex;
	vertical-align: top;
}

table.mw-nsinfotable.intro th.mw-align-start {
	text-align: left;
}

table.mw-nsinfotable.intro th.mw-align-end {
	text-align: right;
}

table.mw-nsinfotable.body td.mw-nsinfotable-local,
table.mw-nsinfotable.body td.mw-nsinfotable-trans,
table.mw-nsinfotable.body td.mw-nsinfotable-modify {
	text-align: center;
}

table.mw-nsinfotable.body td.mw-nsinfotable-local-yes {
	background: #d5fdf4;
}

/* It's safe enough to assume that URLs are usually LTR. */
/* @noflip */
.mw-nsinfotable-url,
input#mw-nsinfo-url {
	text-align: left;
	direction: ltr;
}

.mw-nsinfotable-modify {
	white-space: nowrap;
}

.mw-nsinfo-legend th:before,
.mw-nsinfo-legend .mw-collapsible-toggle {
	font-weight: normal !important; /* stylelint-disable-line declaration-no-important */
}

/* Selector with higher specifity than wikitable */
table.wikitable.mw-nsinfo-legend {
	margin-top: 2em;
}

.mw-collapsible-content {
	clear: both;
}
